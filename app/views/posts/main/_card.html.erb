<div class="card my-3 ">
  <%= image_tag(post.thumbnail, class: "card-img-top", alt: "Card image") %>
  <div class="card-body">
    <h3 class="card-title"><%= link_to post.title, post, class: "cardtitle" %></h3>
    <p class="card-text"><%= post.body.to_plain_text.truncate_words(25) %></p>
  </div>
  <div class="card-footer">
    <small class="text-muted">
        By <%= post.user.username %> 
      | <%= pluralize(post.views, "View") %>
        | <%= pluralize(post.total_comments, "Comment") %>  
      <% if current_user && (current_user.admin || current_user == post.user) %>
         | <%= link_to "Delete post", post, method: :delete, class: "btn btn-outline-danger btn-sm", data: { confirm: 'Are you sure?' } %>
         | <%= link_to "Edit post", edit_post_path(post), class: "btn btn-outline-warning btn-sm" %>
        <% end %>
    </small>
  </div>
</div>